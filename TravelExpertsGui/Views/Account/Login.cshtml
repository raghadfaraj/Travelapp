@model TravelExpertsData.Customer
@{
    ViewData["Title"] = "Login";
}

<h1 class="text-center m-5">Login</h1>
<div class="mx-auto text-center login-logo mb-3">
    <img class="d-block img-fluid" src="~/images/travel.png"/>
</div>

<form method="post" class="container mx-auto col-10 col-md-8 col-lg-6 card p-2">
    <div class="form-group col-md-8 mx-auto">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" class="form-control" placeholder="Please put in your username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group col-md-8 mx-auto">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" type="password" placeholder="Please put in your password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    @*<input class="col-md-8" type="text" name="username" placeholder="Please put in your username" />
    <input type="text" name="password" placeholder="Please put in your password" />*@
    <div class="form-group mx-auto">
        <button class="btn btn-primary d-block mx-auto mt-3">Login</button>
        <a class="btn btn-primary d-block mx-auto mt-3" asp-area="" asp-controller="Customers" asp-action="Create">Register</a>
    </div>

</form>
