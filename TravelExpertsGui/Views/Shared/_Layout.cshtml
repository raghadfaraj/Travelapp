<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelExpertsGui</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TravelExpertsGui.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow p-0 mp-5">
            <div class="container-fluid p-3">
                <a class="navbar-brand d-block" asp-area="" asp-controller="Home" asp-action="Index"><div class="logo-container ms-4"><img src="~/images/travel.png" />Travel Experts</div></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse justify-content-center">
                    <div class="navbar-nav ">
                        <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        <partial name="_LoginPartial" />                        
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        @if (TempData["Message"] != null)
        {
            <h4 class="@(TempData["IsError"] != null? "bg-danger": "bg-success")">
                @TempData["Message"]
            </h4>
        }
        <main role="main" class="main p-0 m-0">
            @RenderBody()
        </main>
    </div>

    <footer class="py-5" >
        <div class="container row">
            <div class="col-md-6 text-center justify-content-center">
                &copy; @DateTime.Now.Year - Travel Experts
            </div>
             <div class="col-md-6 d-flex justify-content-center">
                <a class="nav-link text-dark" asp-area="" asp-controller="Packages" asp-action="Index">Our Packages</a>
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
             </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
